<h1> Edit Anime </h1>
<form action ="/update/ <%= animes[:id] %>" method="post">
  <p>
    <label>
      Name
      <input type="text" name="name" value="<%= animes[:name] %>">
    </label>
  </p>
  <p>
    <label>
      Creator
      <input type="text" name="creator" value="<%= animes[:creator] %>">
    </label>
  </p>
  <p>
    <label>
      Main Character
      <input type="text" name="mainChar" value="<%= animes[:mainChar]%>">
    </label>
  </p>
</form>
